{
    "grouped": true,
    "title": "Mission Yopa!",
    "controllerName": "ExampleViewController",
    "sections": [

        { "title":"Explications", "elements":[
            {"type":"QWebElement",  "title":"Le brief sur notre blog", "url":"http://www.mobeye-app.com/missions-coca-cola/"},
            {  "type":"QButtonElement", "title":"Get data from JSON", "controllerAction":"handleBindWithJsonData:"},
        ]
        },
        { "title":"Rélévé du produit n°1", "elements":[
            {  "type":"QTextElement", "text":"Concernant le produit Omo micro, à quel prix est-il vendu et quelle est la quantité disponible en rayon ?"},
            {  "type":"QWebElement",  "title":"Visuel du produit", "html":"<img src='http://www.mobeye-app.com/wp-content/uploads/2013/07/Coca-Cola_car_Volkswagen_Type-2_2_Curitiba-770x300.jpg' />"},
            {  "type":"QPickerElement", "title":"Présence produit", "bind":"value:presence",  "items":[["Oui", "Non", "En rupture"]]},
            {  "type":"QEntryElement", "title":"Prix de l'objet", "suffix":"€", "bind":"textValue:prix", "keyboardType":"DecimalPad" },
            {  "type":"QEntryElement", "title":"Quantité", "suffix":" unité(s)", "bind":"textValue:quantité",  "keyboardType":"DecimalPad" },
            {  "type":"QPickerElement", "title":"Code EAN", "bind":"value:code_ean", "items":[["001", "002", "002"], ["2013", "2014", "2015"]]},
            {  "type":"QBadgeElement", "shallowBind":false, "title":"Produits présents", "presentationMode":"Normal",
               "sections": [
                { "type":"QSelectSection", "title":"Produits présents", "items":["Yopa!", "Daniau", "Laitière", "Danette"], "bind":"selectedIndexes:products", "key":"products",  "multipleAllowed":true}
                ]
            },
            {  "type":"QBadgeElement", "key":"layout", "title":"Ordre des catégories", "presentationMode":"Normal",
                "sections": [
                { "title":"Explications", "elements":
                    [
                        {  "type":"QTextElement", "text":"Vous devez réarranger les éléments dans l'ordre qui vous convient"},
                    ]
                },
                { "type":"QSortingSection", "title":"Ordre des catégories", "items":["Cafe en poudre", "Filtres", "Dosettes"], "sortingEnabled":true, "canDeleteRows": true}
                ]
            },
            {  "type":"QButtonElement", "title":"Ajouter une photo ? (3 max)", "controllerAction":"insertPhoto:"}
            ]
        } ,
        { "title":"Et pour finir", "elements":[
            {  "type":"QTextElement", "text":"Souhaitez-vous nous laisser un commentaire concernant cette mission ?"},
            {  "type":"QMultilineElement", "bind":"textValue:comment", "title":"Votre commentaire"},
            {  "type":"QButtonElement", "title":"Soumettre le questionnaire", "controllerAction":"submit:"},
            {  "type":"QProgressElement"},
        ]}
    ]

}
